{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "assets/extension-logo/16.png",
    "32": "assets/extension-logo/32.png",
    "48": "assets/extension-logo/48.png",
    "128": "assets/extension-logo/128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "{{chrome}}.activeTab",
    "{{chrome}}.declarativeContent",
    "{{firefox}}.<all_urls>",
    "{{firefox}}.*://api.anime-skip.com/*",
    "{{firefox}}.*://usage-stats.anime-skip.com/*",
    "{{firefox}}.*://staged.api.anime-skip.com/*"
  ],
  "background": {
    "{{chrome}}.service_worker": "background.ts",
    "{{firefox}}.scripts": ["background.ts"]
  },
  "{{chrome}}.action": {
    "default_popup": "popup.html"
  },
  "{{firefox}}.page_action": {
    "browser_style": false,
    "default_popup": "popup.html"
  },
  "{{firefox}}.options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "browser_style": false
  },
  "{{chrome}}.options_page": "options.html",
  "content_scripts": [
    {
      "js": ["content-scripts/player.ts"],
      "css": ["generated:content-scripts/style.css"],
      "all_frames": true
    },
    {
      "js": ["content-scripts/parent.ts"],
      "all_frames": false
    },
    {
      "js": ["content-scripts/keyboard-shortcut-blocker.ts"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
  "{{firefox}}.web_accessible_resources": ["assets/*", "assets/**/*"],
  "{{chrome}}.web_accessible_resources": [
    {
      "resources": ["assets/*", "assets/**/*"],
      "matches": ["*://*/*"]
    }
  ]
}
