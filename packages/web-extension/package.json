{
  "name": "web-extension",
  "displayName": "Anime Skip Player",
  "description": "Skip intros, credits, filler and more on supported services",
  "version": "1.12.5",
  "license": "GPL-3.0",
  "private": true,
  "author": "Aaron Klinker <aaronklinker1@gmail.com>",
  "engines": {
    "node": ">=14.17.4",
    "pnpm": ">=6"
  },
  "scripts": {
    "start": "vite build --watch",
    "start:chrome": "cross-env BUILD_FOR=chrome pnpm start",
    "dev": "concurrently --kill-others-on-fail -n extension,services -c magenta,cyan \"pnpm dev:extension\" \"pnpm dev:services\"",
    "dev:extension": "cross-env BUILD_MODE=dev pnpm start",
    "dev:chrome": "concurrently --kill-others-on-fail -n extension,services -c magenta,cyan \"cross-env BUILD_FOR=chrome pnpm dev:extension\" \"pnpm dev:services\"",
    "dev:services": "docker-compose -f docker/docker-compose.yml up --abort-on-container-exit",
    "compile": "vue-tsc --noEmit",
    "test": "vitest",
    "test:e2e": "echo 'TODO'",
    "lint": "eslint . --ext .ts,.vue --max-warnings 0 --fix",
    "lint:check": "eslint . --ext .js,.ts,.vue --max-warnings 0",
    "lint:web-ext": "web-ext lint -s dist",
    "clean:services": "npm run dev:services -V",
    "build": "cross-env BUILD_MODE=prod vite build",
    "build:chrome": "cross-env BUILD_FOR=chrome pnpm build",
    "build:beta": "cross-env BUILD_MODE=beta vite build",
    "build:beta:chrome": "cross-env BUILD_FOR=chrome pnpm build:beta",
    "build:staged": "cross-env BUILD_MODE=staged vite build",
    "build:staged:chrome": "cross-env BUILD_FOR=chrome pnpm build:staged",
    "zip-sources": "esno scripts/zip-sources.ts",
    "package": "esno scripts/package/index.ts",
    "package:dry": "cross-env DRY_RUN=true pnpm package"
  },
  "dependencies": {
    "@anime-skip/api-client": "^2.6.2",
    "@anime-skip/ui": "^3.1.5",
    "@anime-skip/usage-stats-client": "^1.4.4",
    "@vueuse/core": "^8.4.2",
    "async-mutex": "^0.3.2",
    "axios": "^0.24.0",
    "axios-auth-refresh": "^3.2.2",
    "common": "workspace:*",
    "exponential-backoff": "^3.1.0",
    "fuzzysort": "^1.1.4",
    "lodash.isequal": "^4.5.0",
    "md5": "^2.3.0",
    "vue": "*",
    "vue-router": "^4.0.15",
    "vue-use-request-state": "^0.2.2",
    "webextension-polyfill": "*"
  },
  "devDependencies": {
    "@iconify/json": "^1.1.386",
    "@tailwindcss/line-clamp": "^0.2.1",
    "@types/fs-extra": "^9.0.12",
    "@types/jsdom": "^16.2.14",
    "@types/lodash.isequal": "^4.5.5",
    "@types/lodash.merge": "^4.6.6",
    "@types/md5": "^2.3.1",
    "@types/node": "^16.6.0",
    "@types/rimraf": "^3.0.2",
    "@types/tailwindcss": "^3.0.0",
    "@types/webextension-polyfill": "^0.8.2",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "@typescript/lib-dom": "npm:@types/web",
    "@vitejs/plugin-vue": "^2.3.2",
    "@vue/compiler-sfc": "^3.2.33",
    "autoprefixer": "^10.4.1",
    "caniuse-lite": "^1.0.30001352",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^8.15.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "esno": "*",
    "form-data": "^4.0.0",
    "fs-extra": "^10.0.0",
    "jsdom": "*",
    "lodash.merge": "^4.6.2",
    "postcss": "^8.4.5",
    "postcss-selector-parser": "^6.0.6",
    "rimraf": "^3.0.2",
    "sass": "^1.51.0",
    "tailwindcss": "^3.0.8",
    "typescript": "*",
    "unplugin-vue-components": "^0.19.3",
    "vite": "*",
    "vite-plugin-web-extension": "*",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "*",
    "vitest-mock-extended": "*",
    "vue-global-api": "*",
    "vue-tsc": "^0.34.11",
    "zip-a-folder": "^1.1.0"
  }
}
