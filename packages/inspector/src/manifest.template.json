{
  "name": "Anime Skip Inspector",
  "description": "Help inspect websites that block the dev tools from opening",
  "version": "0.0.0",
  "{{firefox}}.manifest_version": 2,
  "{{chrome}}.manifest_version": 3,
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "permissions": ["tabs", "contextMenus", "storage", "<all_urls>"],
  "background": {
    "{{chrome}}.service_worker": "background.ts",
    "{{firefox}}.scripts": ["background.ts"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.ts"],
      "all_frames": true
    }
  ]
}
