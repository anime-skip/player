      "vitest": "^0.21.1",
      "vitest-mock-extended": "^0.1.13",
      "vue": "^3.2.37",
      "vue-global-api": "^0.4.1",
      "webextension-polyfill": "^0.9.0"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/download",
        "body-parser",
        "download",
        "express",
        "safe-compare"
      ]
    }
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3"
  }
