{
  "name": "anime-skip-player-monorepo",
  "private": true,
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preinstall": "npx only-allow pnpm",
    "validate": "pnpm format:check",
    "prepare": "husky install"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^4.6.4",
      "vite": "^2.9.8",
      "vite-plugin-web-extension": "^1.3.2"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/download",
        "body-parser",
        "download",
        "express",
        "safe-compare"
      ]
    }
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3"
  }
}
