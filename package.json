{
  "name": "anime-skip-player-monorepo",
  "private": true,
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install"
  },
  "pnpm": {
    "overrides": {
      "jsdom": "^19.0.0",
      "typescript": "^4.7.4",
      "vite": "^2.9.8",
