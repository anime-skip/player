{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [true, "single", "jsx-double"],
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "one-line": false,
    "curly": false,
    "no-console": false,
    "variable-name": false,
    "no-shadowed-variable": [true, {
      "class": true,
      "enum": true,
      "function": false,
      "interface": false,
      "namespace": false,
      "typeAlias": false,
      "typeParameter": false,
      "underscore": false
    }]
  }
}
