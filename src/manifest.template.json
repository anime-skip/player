{
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "{{chrome}}.activeTab",
    "{{chrome}}.declarativeContent",
    "{{firefox}}.<all_urls>",
    "{{firefox}}.*://api.anime-skip.com/*",
    "{{firefox}}.*://usage-stats.anime-skip.com/*",
    "{{firefox}}.*://staged.api.anime-skip.com/*"
  ],
  "page_action": {
    "{{firefox}}.show_matches": ["https://www.anime-skip.com/*", "https://anime-skip.com/*"],
    "browser_style": false,
    "default_icon": {
      "16": "assets/extension-logo/16.png",
      "32": "assets/extension-logo/32.png",
      "48": "assets/extension-logo/48.png",
      "128": "assets/extension-logo/128.png"
    },
    "default_popup": "popup/index.html"
  },
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true,
    "{{firefox}}.browser_style": false,
    "{{chrome}}.chrome_style": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.anime-skip.com/*", "https://anime-skip.com/*"],
      "js": ["content-scripts/anime-skip/index.ts"]
    }
  ],
  "background": {
    "scripts": [
      "background/messenger.ts",
      "background/on-install.ts",
      "background/context-menu.ts",
      "background/uninstall-feedback.ts",
      "background/tab-change.ts",
      "{{chrome}}.background/chrome-page-action.ts"
    ]
  },
  "icons": {
    "16": "assets/extension-logo/16.png",
    "32": "assets/extension-logo/32.png",
    "48": "assets/extension-logo/48.png",
    "128": "assets/extension-logo/128.png"
  },
  "web_accessible_resources": ["assets/*", "assets/**/*"]
}
